<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:id="@+id/nameEvent"
        android:textSize="19sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:maxLength="24"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@android:color/tertiary_text_dark"/>

    <TextView
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:textSize="15sp"
        android:layout_below="@+id/nameEvent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLength="40"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/tertiary_text_dark"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeLeft"
        android:textSize="12sp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/nameEvent"
        android:layout_alignTop="@+id/nameEvent"
        android:textColor="@android:color/tertiary_text_dark"
        android:layout_toEndOf="@+id/location"
        android:layout_toRightOf="@+id/location"

        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateTime"
        android:layout_below="@+id/location"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location"
        android:textColor="@android:color/tertiary_text_dark"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <CheckBox
        android:id="@+id/favCheckBox"
        android:button="@drawable/btn_star_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_alignBottom="@+id/dateTime"
        android:layout_alignRight="@+id/timeLeft"
        android:layout_alignEnd="@+id/timeLeft"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:scaleX="1.20"
        android:scaleY="1.20"
        />



</RelativeLayout>